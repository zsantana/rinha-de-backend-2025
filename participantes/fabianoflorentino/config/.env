# Mr. Robot Application Environment Variables
# Copy this file to config/.env and adjust values as needed

# Application Configuration
APP_NAME="Mr Robot"
APP_PORT=8888
GIN_MODE=release
TZ=America/Sao_Paulo

# Database Configuration
POSTGRES_HOST=mr_robot_db
POSTGRES_USER=mr_robot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mr_robot
POSTGRES_PORT=5432
POSTGRES_LOCAL_PORT=5432
POSTGRES_SSLMODE=disable
POSTGRES_TIMEZONE=UTC

# External Services
DEFAULT_PROCESSOR_URL=http://payment-processor-default:8080/payments
FALLBACK_PROCESSOR_URL=http://payment-processor-fallback:8080/payments

# Configurações da aplicação
QUEUE_WORKERS=10
QUEUE_BUFFER_SIZE=10000
QUEUE_MAX_ENQUEUE_RETRIES=4
QUEUE_MAX_SIMULTANEOUS_WRITES=50

# Docker Configuration
IMAGE_TAG=v0.0.1
COMPOSE_PROJECT_NAME=mr-robot

# Development Settings (only for dev environment)
DEBUG=true
LOG_LEVEL=debug
HOT_RELOAD=true
